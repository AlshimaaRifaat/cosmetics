<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/group40"
    tools:context=".SplashActivity">



        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/logo_1"

            android:layout_centerHorizontal="true"
           android:layout_marginTop="@dimen/_165sdp"/>
    <TextView
        android:id="@+id/T_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/StyleCosmetics"
        android:layout_below="@+id/img_logo"
        android:textColor="#fff"
        android:textSize="@dimen/_26sdp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/BeautyCenter"
        android:layout_below="@+id/T_label"
        android:textColor="#fff"
        android:textSize="@dimen/_15sdp"
        android:layout_centerHorizontal="true"
        />



</RelativeLayout>